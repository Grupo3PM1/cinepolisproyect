<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cinepolisproyect.Views.ForgotPasswordPage">
    <Grid>
     
        <Frame x:Name="Frame1"  BackgroundColor="#20667db6" HasShadow="False" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,50,0,0" WidthRequest="300">

            <StackLayout>
                <Label Text="Restablecer contraseña" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Margin="10,0,0,0"  FontSize="25" FontAttributes="Bold"/>
                <Label Text="Recupera tu cuenta" TextColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Margin="15,0,0,0"  FontSize="14" />

                <StackLayout Orientation="Horizontal" Margin="0,30,0,10">
                    <Entry x:Name="ttemail_user_recu" TextColor="Black"  FontSize="15" Placeholder="Correo electrónico" PlaceholderColor="Black" FontAttributes="None" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" Keyboard="Email" />
                </StackLayout>



                <Button Text="Restablecer" VerticalOptions="EndAndExpand" WidthRequest="250" CornerRadius="30" FontSize="15" TextColor="White" HorizontalOptions="Center" BackgroundColor="#667db6" x:Name="btn_restablecer" Clicked="btn_restablecer_Clicked"/>
             
            </StackLayout>

        </Frame>

    </Grid>
</ContentPage>