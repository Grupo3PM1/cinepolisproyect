<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cinepolisproyect.Views.HomePage"
             NavigationPage.HasNavigationBar="False"
             Title="Home"
             Icon="outline_home_black_24dp.png"
             BackgroundImage="fondodashboard.png">
    <StackLayout>
        <ScrollView>
            <StackLayout>
                <Frame Padding="8,8,0,0" CornerRadius="0">
                <FlexLayout>
                        <Image Source="Cinepolislogo.png" HeightRequest="40" HorizontalOptions="Start"/>
                        <Label Text="CINEPOLIS" Padding="5" HorizontalOptions="Center" FontSize="24"/>
                        <Button Text="salir" Margin="90,0,0,0"  BackgroundColor="Transparent" x:Name="btn_signOut" Clicked="btn_signOut_Clicked"/>
                    </FlexLayout>
                </Frame>
                <Label Text="Proximamente" HorizontalOptions="Center" FontSize="24"/>
                <Image Source="img1.jpg" WidthRequest="350" HorizontalOptions="Center"/>
                <Image Source="img2.jpg" WidthRequest="350" HorizontalOptions="Center"/>
                <Image Source="img3.jpg" WidthRequest="350" HorizontalOptions="Center"/>
                <Image Source="img4.jpg" WidthRequest="350" HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>